 @model ASPNETMVCCRUD.Models.AddEmployeeViewModel

 @{
 }
 <div>

 <h1 style="text-align:center">Add Employee</h1>
 <form method="post" asp-action="Add"  enctype="multipart/form-data">
   <div class="mb-2">
     <label for="" class="form-label">Name</label>
     <input type="text" class="form-control" asp-for="Name" />
   </div>
   <div class="mb-2">
     <label for="" class="form-label">Email</label>
     <input type="text" class="form-control" asp-for="Email" />
   </div>
   <div class="mb-2">
     <label for="" class="form-label">Salary</label>
     <input type="number" class="form-control" asp-for="Salary" />
   </div>
   <div class="mb-2">
     <label for="" class="form-label">Date of Birth</label>
     <input type="date" class="form-control" asp-for="DateofBirth" />
   </div>
     <div class="mb-2">
       <label for="Department" class="form-label">Department</label>
      <select class="form-control" asp-for="SelectedDepartment" asp-items="@Model.Departments">
         <option value="">-- Select Department --</option>
       </select>
     </div>


   <div class="mb-2">
   <label for="" class="form-label">Image</label>
     <input type="file" asp-for="ImageFileName" accept=".jpg,.jpeg,.png">
   </div>

   <button type="submit" class="btn btn-primary" >Submit</button>
 </form>

 <style>
   /* Overall container for form */
 form {
   max-width: 600px;
   margin: 0 auto;
   padding: 20px;
   background-color: #f9f9f9;
   border-radius: 8px;
   box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
 }

 /* Form heading */
 form h1 {
   text-align: center;
   margin-bottom: 20px;
   font-size: 24px;
   color: #333;
 }

 /* Form label */
 label.form-label {
   font-weight: 600;
   color: #555;
   margin-bottom: 8px;
   display: block;
 }

 /* Form input fields */
 input.form-control {
   width: 100%;
   padding: 10px;
   margin: 8px 0;
   border: 1px solid #ccc;
   border-radius: 4px;
   box-sizing: border-box;
 }

 /* Input focus styling */
 input.form-control:focus {
   outline: none;
   border-color: #007bff;
   box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
 }

 /* Button styling */
 button.btn {
   background-color: green;
   color: white;
   padding: 10px 20px;
   border: none;
   border-radius: 4px;
   font-size: 16px;
   cursor: pointer;
   transition: background-color 0.3s;
  display:flex;
  justify-content:center;
  align-items:center;
 }

 button.btn:hover {
   background-color: #0056b3;
 }

 /* Spacing for form elements */
 .mb-2 {
   margin-bottom: 1rem;
 }

 /* File input styling */
 input[type="file"] {
   padding: 5px;
   margin-top: 8px;
   border: 1px solid #ccc;
   border-radius: 4px;
 }

 /* Make the file input a bit more visually appealing */
 input[type="file"]:focus {
   border-color: #007bff;
   box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
 }


 </style>
 </div>

